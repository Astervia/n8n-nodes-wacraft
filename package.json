{
    "name": "@astervia/n8n-nodes-wacraft",
    "version": "0.1.0",
    "description": "n8n community node for wacraft - WhatsApp Cloud API operations",
    "keywords": [
        "n8n-community-node-package",
        "whatsapp",
        "wacraft"
    ],
    "license": "MIT",
    "homepage": "https://github.com/Astervia/n8n-nodes-wacraft",
    "author": {
        "name": "Astervia Dev Team",
        "email": "wacraft@astervia.tech"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Astervia/n8n-nodes-wacraft.git"
    },
    "main": "index.js",
    "scripts": {
        "build": "tsc && gulp build:icons",
        "dev": "tsc --watch",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "lint": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts'",
        "lint:fix": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts' --fix",
        "prepublishOnly": "npm run build"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "n8nNodesApiVersion": 1,
        "credentials": [
            "dist/credentials/WacraftApi.credentials.js"
        ],
        "nodes": [
            "dist/nodes/Wacraft/Wacraft.node.js"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.2.0",
        "eslint": "^9.39.2",
        "gulp": "^5.0.1",
        "n8n-workflow": "^2.6.0",
        "prettier": "^3.2.0",
        "typescript": "~5.4.0",
        "typescript-eslint": "^8.54.0"
    },
    "peerDependencies": {
        "n8n-workflow": "*"
    }
}
