{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es2019",
        "lib": ["es2019"],
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["nodes/**/*.ts", "credentials/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
